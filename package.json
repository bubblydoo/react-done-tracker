{
  "name": "react-done-tracker",
  "version": "0.1.1",
  "description": "Keep track of when your React tree is done loading",
  "type": "module",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bubblydoo/react-done-tracker.git"
  },
  "author": "Hans Otto Wirtz <hansottowirtz@gmail.com>",
  "license": "MIT",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "pnpm test-vitest && pnpm test-storybook",
    "test-storybook": "cross-env TEST_ALL_BROWSERS=true vitest --project=storybook",
    "test-storybook-chromium": "vitest --project=storybook",
    "test-vitest": "vitest --project=unit",
    "test-debug": "cross-env DEBUG=true PWDEBUG=1 pnpm test-storybook",
    "prepublishOnly": "pnpm build"
  },
  "files": [
    "dist/**/*",
    "!dist/*.tsbuildinfo"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@storybook/addon-docs": "^10.0.7",
    "@storybook/addon-links": "^10.0.7",
    "@storybook/addon-vitest": "^10.0.7",
    "@storybook/react-vite": "^10.0.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitejs/plugin-react": "^5.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "10.0.7",
    "globals": "^16.0.0",
    "jsdom": "^27.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "^10.0.7",
    "tsup": "^8.4.0",
    "typescript": "~5.8.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8",
    "@vitest/browser": "^4.0.8",
    "@vitest/browser-playwright": "^4.0.8",
    "@vitest/coverage-v8": "^4.0.8"
  },
  "packageManager": "pnpm@10.4.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild"
    ]
  }
}
